<!DOCTYPE html>
<html>
  <head>
    <title>MyKitchenApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <center><h1>MyKitchenApp</h1></center>
        <%= link_to "Advance Search", recipes_search_path %>
      <center>
      <%= form_tag(recipes_path, method: :get) do %>
        <%= text_field_tag :term, params[:term] %>
        <%= submit_tag 'Search' %>
      <% end %>
      <br></center>
      <%= link_to("Home", root_path) %>
              <% if current_user %>
              <%= link_to "Logout", session_path("current"), method: :delete %>
              <%= link_to "Add a Recipe", new_recipe_path %>
              <%= link_to "My Kitchen", users_kitchen_path %>
              <%= link_to "Shopping List", users_shoppinglist_path %>
                <% else %>
              <%= link_to "Login", new_session_path %>
              <%= link_to "Signup", new_user_path %>
            <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
