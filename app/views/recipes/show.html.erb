<br>
<h3>Recipe</h3>
<br>
<article>
  <p><h3><%= @recipe.name %></h3></p>
  <br>
  <p> <%= image_tag('https://' + @recipe.image_url) %> </p>
  <p><strong>Steps</strong></p>
  <% @steps.each_with_index do |step, i| %>
    <p>Step <%= i+1 %>: <%= step.content %></p>
  <% end %>
  <br>
  <p><strong>Ingredients</strong></p>
  <% @ingredients.each do |ingredient| %>
    <p><%= ingredient.measurement_unit %>: <%= ingredient.food.name %></p>
  <% end %>

  <% if current_user %>
    <% unless @favorited  %>
      <%= form_tag favorite_recipe_path(@recipe.id) do %>
        <%= submit_tag 'Save Recipe To Favourites' %>
      <% end %>
    <% end  %>
    <div class="reviews-div">
      <% if @reviews  %>
        <% @reviews.each do |review| %>
          <div class="review">
            <p><%= current_user.name %>:<%= review.comment %></p>
            <p><time><%= review.created_at %></time></p>
          </div>
        <% end  %>
      <% end  %>
      <p>
        <%= form_tag review_recipe_path(@recipe.id) do %>
          <%= text_area_tag 'comment' %>
          <%= submit_tag 'Post Review' %>
        <% end %>
      </p>
    </div>
    <%= form_tag favorite_recipe_path(@recipe.id) do %>
      <%= submit_tag 'Save' %>
    <% end %>
    <%= form_tag saved_foods_path(@recipe.id) do %>
      <%= submit_tag 'Add all foods to Shopping List' %>
    <% end %>
  <% end  %>

</article>
