<br>
<h3>Create a new Recipe!</h3>
<br>
<div class="form kitchen">
  <%= form_for :recipe do |f| %>
    <p>
      <%= f.label :name  %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description  %>
      <%= f.text_field :description %>
    </p>
    <div id="step-div">
      <p>Step 1: <input type="textarea" name="recipe[steps][1]" id="step1" ></p>
    </div>
    <button type="button" name="button" id="add-step-button">Add a new Step</button>
    <div id="ingredient-div">
      <p>Ingredient 1: <input type="textarea" name="recipe[ingredient][1]" id="ingredient1" ></p>
    </div>
    <p><button type="button" name="button" id="add-ingredient-button">Add a new Ingredient</button></p>
    <%= f.submit %>
    </p>
  <% end %>
</div>
