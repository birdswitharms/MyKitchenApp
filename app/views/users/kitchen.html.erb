<center><h2><%= current_user.name.capitalize %>'s Kitchen</h2></center>
<br>
<center><h2>Ingredients</h2></center>
<div class="food-div">
  <% @foods.each do |food| %>
    <article>
      <p><%= food.name %></p>
    </article>
  <% end %>
  <br>
  <center><%= link_to "Add Ingredients", users_pantry_path %></center>
  <br><br>
</div>
<center><h2>Appliances</h2></center>
<div class="food-div">
  <% @appliances.each do |appliance| %>
    <article>
      <p><%= appliance.name.capitalize %></p>
    </article>
  <% end %>
  <br>
  <center><%= link_to "Add Appliances", user_appliances_path %></center>
  <br><br>
</div>
