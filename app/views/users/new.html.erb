<br>
<p><strong><h3>Sign Up</h3></strong></p>
<br>
<div class="form kitchen">
  <%= form_for @user do |f| %>
    <p>
      <%= f.label :name %> <br />
      <%= f.text_field :name %>
    </p>
    <p>
       <%= f.label :password %><br />
       <%= f.password_field :password %>
    </p>
    <p>
       <%= f.label :password_confirmation %><br />
       <%= f.password_field :password_confirmation %>
    </p>
    <p>
      <%= f.submit "Save" %>
    </p>
  <% end %>
</div>
